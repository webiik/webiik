{% extends "base.twig" %}
{% block content %}
    <h1>{{ seo.title }}</h1>
    <p>{{ seo.desc }}</p>
    <form action="" method="post">
    {% for message in messages().err %}{{ message }}{% endfor %}
    <input type="text" name="email" placeholder="email" value="{{ form.email }}">
    {{ form.err.email.0 }}
    <input type="password" name="pswd" placeholder="password" value="{{ form.pswd }}">
    {{ form.err.pswd.0 }}
    {{ csrfInput() }}
    {% if referrer %}
    <input type="hidden" name="ref" value="{{ referrer }}">
    {% endif %}
    <input type="submit" value="signup">
    </form>
{% endblock %}